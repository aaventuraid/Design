{
  "name": "yuki-yaki-corner",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "husky",
    "dev:setup": "docker-compose -f docker-compose.dev.yml up -d && npm run db:reset && npm run dev",
    "dev:reset": "prisma migrate reset --force && prisma db seed",
    "dev:clean": "docker-compose -f docker-compose.dev.yml down -v && npm run dev:setup",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:migrate:prod": "prisma migrate deploy",
    "db:studio": "prisma studio",
    "db:push": "prisma db push",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:setup": "prisma generate && prisma migrate dev && prisma db seed",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:coverage": "jest --coverage",
    "build:analyze": "ANALYZE=true next build",
    "deploy:staging": "git push origin develop",
    "deploy:prod": "git push origin main",
    "ai:test": "tsx scripts/test-ai-integration.ts",
    "images:optimize": "tsx scripts/optimize-existing-images.ts",
    "templates:generate": "tsx scripts/generate-templates.ts",
    "logs:dev": "docker-compose -f docker-compose.dev.yml logs -f",
    "health:check": "tsx scripts/health-check.ts",
    "postgres:start": "docker-compose -f docker-compose.dev.yml up -d",
    "postgres:stop": "docker-compose -f docker-compose.dev.yml down",
    "postgres:logs": "docker-compose -f docker-compose.dev.yml logs -f postgres",
    "docker:build": "docker build -t yuki-yaki-corner .",
    "docker:run": "docker run -p 3000:3000 --env-file .env yuki-yaki-corner",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f app",
    "coolify:setup": "chmod +x scripts/coolify-start.sh",
    "ci": "npm run lint && npm run typecheck && npm run build"
  },
  "dependencies": {
    "@prisma/client": "^6.16.2",
    "@types/bcryptjs": "^2.4.6",
    "@types/jsonwebtoken": "^9.0.10",
    "bcryptjs": "^3.0.2",
    "c12": "^1.11.1",
    "effect": "^3.9.2",
    "empathic": "^2.0.0",
    "fast-check": "^4.3.0",
    "jsonwebtoken": "^9.0.2",
    "next": "^15.0.0",
    "prisma": "^6.16.2",
    "react": "18.3.1",
    "react-dom": "18.3.1",
    "sharp": "^0.33.4",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "@types/react": "^18.3.4",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.12.0",
    "eslint-config-next": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "husky": "^9.1.4",
    "lint-staged": "^15.2.10",
    "postcss": "^8.4.47",
    "prettier": "^3.3.3",
    "tailwindcss": "^3.4.14",
    "tsx": "^4.20.5",
    "typescript": "^5.6.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "next lint --fix --file",
      "prettier --write"
    ],
    "*.{css,md,json}": [
      "prettier --write"
    ]
  }
}
